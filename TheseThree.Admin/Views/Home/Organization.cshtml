<div class="panel-body" style="padding-bottom:0;">
    <ul id="myTab" class="nav nav-tabs">
        <li class="active">
            <a href="#ward" data-toggle="tab">
                科室管理
            </a>
        </li>
        <li><a href="#team" data-toggle="tab">组管理</a></li>
    </ul>
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade in active" id="ward">
            <div class="panel panel-default">
                <div class="panel-heading">查询条件</div>
                <div class="panel-body">
                    <form class="form-inline">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">科室名称</div>
                                <input type="text" class="form-control" id="txt_search_departmentname" placeholder="科室名称" style="width: 230px;">
                            </div>
                            <button type="button" id="btn_query" class="btn btn-primary">查询</button>
                        </div>
                    </form>
                </div>
            </div>
            <div id="toolbar" class="btn-group">
                <button id="btn_add" type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
                </button>
                <button id="btn_edit" type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
                </button>
                <button id="btn_delete" type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
                </button>
            </div>
            <table id="wardTable"></table>
        </div>
        <div class="tab-pane fade in" id="team">
            <div class="panel panel-default">
                <div class="panel-heading">查询条件</div>
                <div class="panel-body">
                    <form class="form-inline">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">科室名称</div>
                                <input type="text" class="form-control" id="txt_search_departmentname_team" placeholder="科室名称" style="width: 230px;">
                            </div>
                            <button type="button" id="btn_query_team" class="btn btn-primary">查询</button>
                        </div>
                    </form>
                </div>
            </div>
            <div id="toolbar_team" class="btn-group">
                <button id="btn_add_team" type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
                </button>
                <button id="btn_edit_team" type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
                </button>
                <button id="btn_delete_team" type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
                </button>
            </div>
            <table id="wardTable_team"></table>
        </div>
    </div>
</div>
    <div class="modal" id="mymodal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">新增</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="txt_ward_name">名称</label>
                        <input type="text" class="form-control" id="txt_ward_name" placeholder="请输入名称">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btn_save">保存</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/organization.js"></script>
